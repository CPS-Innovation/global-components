{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./config",
    "declaration": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true
  },
  "include": ["config/**/*.ts", "config/**/*.js"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.js"]
}
