{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./.dist",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": ["config/**/*.test.ts", "test-utils.js"],
  "exclude": ["node_modules", "dist"]
}
