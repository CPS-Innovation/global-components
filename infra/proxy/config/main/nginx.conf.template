load_module modules/ngx_http_js_module.so;

events {
  worker_connections 1024;
}

http {
  include /etc/nginx/mime.types;
  default_type application/octet-stream;

  log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                  '$status $body_bytes_sent "$http_referer" '
                  '"$http_user_agent" "$http_x_forwarded_for"';

  access_log /dev/stdout main;
  error_log /dev/stderr debug;

  sendfile on;
  keepalive_timeout 65;
  js_import nginx.js;

  server {
    listen 8080;
    server_name localhost;

    # DNS resolver (configurable via WEBSITE_DNS_SERVER env var)
    resolver ${WEBSITE_DNS_SERVER} valid=30s;

    # Health check
    location /health {
      add_header Content-Type text/plain;
      return 200 'OK';
    }

    ################################################################################
    ################################################################################
    ################################################################################
    # We only need the relevant directives from the main config
    ################################################################################
    ################################################################################
    ################################################################################
    
    location /init {
      js_content nginx.appAuthRedirect;
    }

    location /polaris {
      js_var $redirectHostAddress http://$host;
      js_content nginx.polarisAuthRedirect;
    }

    include /etc/nginx/global-components*.conf;
  }
}
