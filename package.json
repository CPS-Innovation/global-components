{
  "name": "cps-global-components",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm -r --filter \"./packages/*\" run build",
    "validate": "pnpm -r --filter \"./packages/*\" run validate",
    "test": "pnpm -r --filter \"./packages/*\" --filter \"./infra/proxy\" run test",
    "dev": "pnpm -r --filter \"./packages/cps-global-components\" dev",
    "test:e2e": "./e2e/run-tests.sh",
    "test:e2e:log": "./e2e/run-tests.sh --log",
    "test:proxy": "pnpm -r --filter \"./infra/proxy\" run test:integration",
    "run-html-harness": "./scripts/run-html-harness.sh",
    "run-spa-harness": "./scripts/run-spa-harness.sh",
    "config-sync-check": "./scripts/config-sync-check.sh",
    "config-sync": "./scripts/config-sync.sh"
  },
  "files": [
    "dist",
    "package.json"
  ]
}
